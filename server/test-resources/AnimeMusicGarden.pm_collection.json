{
  "info": {
    "name": "Anime Music Garden API",
    "description": "API collection for Anime Music Garden application",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{authToken}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "baseUrl",
      "value": "http://localhost:5000/api",
      "type": "string"
    },
    {
      "key": "authToken",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "Authentication",
      "item": [
        {
          "name": "Register",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"testuser\",\n  \"password\": \"password123\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/auth/register",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "register"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 201) {",
                  "    const jsonData = pm.response.json();",
                  "    pm.collectionVariables.set('authToken', jsonData.token);",
                  "}"
                ]
              }
            }
          ]
        },
        {
          "name": "Get Current User",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/auth/me",
              "host": ["{{baseUrl}}"],
              "path": ["auth", "me"]
            }
          }
        }
      ]
    },
    {
      "name": "Users",
      "item": [
        {
          "name": "Get Profile",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profile"]
            }
          }
        },
        {
          "name": "Update Profile",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"username\": \"newusername\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/users/profile",
              "host": ["{{baseUrl}}"],
              "path": ["users", "profile"]
            }
          }
        }
      ]
    },
    {
      "name": "Check-ins",
      "item": [
        {
          "name": "Create Check-in",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"type\": \"anime\",\n  \"title\": \"Attack on Titan\",\n  \"episode\": 1,\n  \"rating\": 9,\n  \"emotion\": \"excited\",\n  \"notes\": \"Amazing first episode!\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/checkins",
              "host": ["{{baseUrl}}"],
              "path": ["checkins"]
            }
          }
        },
        {
          "name": "Get All Check-ins",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/checkins?limit=50",
              "host": ["{{baseUrl}}"],
              "path": ["checkins"],
              "query": [
                {
                  "key": "limit",
                  "value": "50"
                },
                {
                  "key": "type",
                  "value": "anime",
                  "disabled": true
                }
              ]
            }
          }
        },
        {
          "name": "Get Check-in by ID",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/checkins/:id",
              "host": ["{{baseUrl}}"],
              "path": ["checkins", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "checkInId"
                }
              ]
            }
          }
        },
        {
          "name": "Update Check-in",
          "request": {
            "method": "PUT",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"rating\": 10,\n  \"notes\": \"Updated notes\"\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/checkins/:id",
              "host": ["{{baseUrl}}"],
              "path": ["checkins", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "checkInId"
                }
              ]
            }
          }
        },
        {
          "name": "Delete Check-in",
          "request": {
            "method": "DELETE",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/checkins/:id",
              "host": ["{{baseUrl}}"],
              "path": ["checkins", ":id"],
              "variable": [
                {
                  "key": "id",
                  "value": "checkInId"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Anime",
      "item": [
        {
          "name": "Search Anime",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/anime/search?q=attack",
              "host": ["{{baseUrl}}"],
              "path": ["anime", "search"],
              "query": [
                {
                  "key": "q",
                  "value": "attack"
                }
              ]
            }
          }
        }
      ]
    },
    {
      "name": "Health",
      "item": [
        {
          "name": "Health Check",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{baseUrl}}/health",
              "host": ["{{baseUrl}}"],
              "path": ["health"]
            }
          }
        }
      ]
    }
  ]
}

